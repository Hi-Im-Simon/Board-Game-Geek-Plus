<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userNameMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25px"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/countGames"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonGameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="switchToGames"
            android:text="Lista gier" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/countAddons"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonAddonList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="switchToAddons"
            android:text="Lista dodatkÃ³w" />
    </LinearLayout>

    <TextView
        android:id="@+id/lastSyncDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginBottom="20px"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonSyncData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="syncData"
        android:text="Synchronizacja" />
</LinearLayout>